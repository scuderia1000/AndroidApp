<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elenaganel.homepayments"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature
    	android:name="android.hardware.camera.flash"
    	android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.elenaganel.homepayments.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.elenaganel.homepayments.CounterType"
            android:label="@string/title_activity_counter_type"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.elenaganel.homepayments.CreateCounterActivity"
            android:label="@string/title_activity_create_counter" >
        </activity>
        <activity
            android:name="com.elenaganel.homepayments.DataCountersActivity"
            android:label="@string/title_activity_data_counters" >
        </activity>
        <activity
            android:name="com.elenaganel.homepayments.CreateDataActivity"
            android:label="@string/title_activity_create_data" >
        </activity>
    </application>

</manifest>